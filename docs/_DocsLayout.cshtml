				new TreeListItem { Title = "sys", Link = "sys" },
				new TreeListItem { Title = "user", Link = "user" }
			}
		},
		new TreeListItem
		{
			Title = "Examples", Link = "examples",
			Items = new TreeListItem[]
			{
				new TreeListItem { Title = "Copy path", Link = "copypath" },
				new TreeListItem { Title = "Favorites", Link = "favorites" },
				new TreeListItem { Title = "Goto", Link = "goto" }
			}
		}
	};
}
<h4 class="is-size-4 mb-5">Documentation</h4>
<div class="columns">
	<aside id="categories" class="column is-one-quarter px-2">
		<section class="menu">
			<div class="container">
				<ul class="menu-list">
					@foreach (var item in list)
					{
					<li>
						@if (item.Link != null)
						{
							var lnk = doc_path + "/" + item.Link;
							<a href="@Html.Raw(lnk)" @if(path.Equals(lnk)) { @Html.Raw("class=\"is-active\"") ; }>

							@if(item.Items?.Length > 0)
							{
								@if(path.StartsWith(lnk))
								{
									<i class="mdl2 mdl2-scroll-chevron-down-legacy"></i>
								}
								else
								{
									<i class="mdl2 mdl2-scroll-chevron-right-legacy"></i>
								}
								<span class="ml-2">@item.Title</span>
							}
							else
							{
								<span class="ml-5">@item.Title</span>
							}
							</a> 
						}
						else
						{
							<span class="ml-6">@item.Title</span>
						}

						@if(item.Items != null && path.StartsWith(@doc_path + "/" + @item.Link))
						{
							<ul>
								@foreach (var subitem in item.Items)
								{
								<li>
									@{ var lnk = doc_path + "/" + item.Link + "/" + subitem.Link;}
									<a href="@Html.Raw(lnk)" @if (path.Equals(lnk)) { @Html.Raw("class=\"is-active\"") ; }>@subitem.Title</a>
								</li>
								}
							</ul>
						}
						</li>
					}
					</ul>
				</ul>
			</div>
		</section>
		<section id="ad-responsive-vertical">
			<div class="container p-3 has-text-centered my-4">
				<!-- ad-responsive-vertical -->
				<ins class="adsbygoogle"
					 style="display:block"
					 data-ad-client="ca-pub-2559766466824022"
					 data-ad-slot="2410467654"
					 data-ad-format="auto"
					 data-full-width-responsive="true"></ins>
				<script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
			</div>
		</section>
	</aside>
